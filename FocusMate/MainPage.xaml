<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FocusMate.MainPage"
             BackgroundColor="#F5F7FA">

    <VerticalStackLayout
        Spacing="20"
        Padding="30"
        VerticalOptions="Center">

        <Label
            Text="Today's Task"
            FontSize="18"
            TextColor="#6B7280"
            HorizontalOptions="Center" />

        <Label
            x:Name="TaskLabel"
            Text="Prepare slides for .NET Conf"
            FontSize="26"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="#111827" />

        <Label
            x:Name="StatusLabel"
            Text="Status: Pending"
            FontSize="16"
            HorizontalOptions="Center"
            TextColor="#DC2626" />

        <Button
            x:Name="ToggleButton"
            Text="Mark as Completed"
            FontSize="16"
            CornerRadius="12"
            HeightRequest="50"
            BackgroundColor="#2563EB"
            TextColor="White"
            Clicked="OnToggleClicked" />

    </VerticalStackLayout>

</ContentPage>
